<title>Todo App </title>  
<div class="container"> 
	<div class="row">
	   <div class="span4"> 
			<h1>Todo App</h1>  
			<hr> 
			<p>My Todos</p> 

			<%= form_for @new_todo, :url => { :action => "add" } do |f| %> <%= f.text_field :todo_item %>
			   <%= f.submit "Add todo", class: "btn btn-primary" %> 
			<%end%> 



		  <div class="well"> 
			<% @todo_items.each do |t| %> <li> <%= t.todo_item %> </li> <% end %>  

			<%= link_to "Delete last todo", delete_path %> 

		 </div> 
       </div> 
    </div> 
</div> <!-- container --> 

	<% if flash[:error] %> 
		<div class="alert alert-error"> <button type="button" class="close" data-dismiss="alert">Ã—</button>
			 <strong><%= flash[:error] %></strong> 
		</div> 
	<% end %>  
	<% if flash[:success] %> 
		<div class="alert alert-success">
		 <strong><%= flash[:error] %></strong> 
		</div> 
	<% end %> 
