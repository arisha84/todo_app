<title>Todo App </title>  
<div class="container"> 
	<div class="row">
	   <div class="span4"> 
			
			<hr> 
			<p>My Todos</p> 

			<%= form_for @new_todo, :url => { :action => "add" } do |f| %>
			   <%= f.text_field :todo_item %>
			   <%= f.submit "Add todo", class: "btn btn-primary" %> 
			<%end%> 



		  <%= form_tag("/todos/complete/", :method => "post") do %>
			<ul style="list-style-type:none;">
				<% @todo_items.each do |t| %> 
	    			 <% if t.done == true %>
     				   <li style="color:grey;"> <%= check_box_tag  "todos_checkbox[]",t.id %> 
     				    <strike><%= t.todo_item %></strike> 
     				   </li>
  					<% else %>
     					<li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>  </li>
  					<% end %>
				<%end%>
			</ul>

		<%= submit_tag("Complete Todos", :class=>"btn btn-success") %>
<%end %>
       </div> 
    </div> 
</div> <!-- container --> 

	<% if flash[:error] %> 
		<div class="alert alert-error"> <button type="button" class="close" data-dismiss="alert">Ã—</button>
			 <strong><%= flash[:error] %></strong> 
		</div> 
	<% end %>  
	<% if flash[:success] %> 
		<div class="alert alert-success">
		 <strong><%= flash[:success] %></strong> 
		</div> 
	<% end %> 
